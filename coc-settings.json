{
  "python.jediEnabled": false, // use MPLS 补全
  //"typescript",
  "coc.preferences.formatOnSaveFiletypes": [
    "dart",
    "html",
    "python",
    "vue",
    "go",
    "json",
    "javascript",
    "css",
    "markdown"
  ],
  "markdownlint.config": {
    "no-bare-urls": false,
    "line_length": false,
    "no-inline-html": {
      "allowed_elements": ["img"]
    }
  },
  "cSpell.userWords": ["bigzhu", "vuejs"],
  // vuejs auto format config
  // 首层加上缩进
  "vetur.format.scriptInitialIndent": true,
  "vetur.format.styleInitialIndent": true,
  //避免 Vetur can't find `tsconfig.json` or `jsconfig.json` 警告 https://vuejs.github.io/vetur/guide/FAQ.html#vetur-can-t-find-package-json-in-xxxx-xxxxxx
  "vetur.ignoreProjectWarning": true,
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "printWidth": 200, // No line exceeds 200 characters
      "singleQuote": true,
      "semi": false, //no need semicolon
      "trailingComma": "none",
      "tabWidth": 2
    }
  },

  // coc-spell-checker
  "cSpell.ignoreWords": [
    "lemmatization",
    "jsonb",
    "genrsa",
    "openssl",
    "youtu",
    "Ebouy",
    "covid",
    "gosoup",
    "oauth",
    "modelsbz",
    "jinzhu",
    "gobz",
    "gorm",
    "vetur",
    "vuejs",
    "markdownlint"
  ],
  // flutter
  "flutter.lsp.initialization.closingLabels": true
}
